{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "screens": ["./src/screens"],
      "screens/*": ["./src/screens/*"],
      "components/*": ["./src/components/*"],
      "utils/*": ["./src/utils/*"],
      "config/*": ["./src/config/*"],
      "assets/*": ["./src/assets/*"]
    }
  }
}
